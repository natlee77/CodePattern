@model IEnumerable<SOLID.Models.DayService>

@{
    ViewData["Title"] = "Index";
}
<main>
    <div class="container">
        <div class="hero-image"><img class="hero  img-fluid" src="img/WorkingAnimals.jpg"></div>
        <h2>Here you can Create new, Edit, Delete the  Day service </h2> 

        <p>
            <a class="btn btn-primary" asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateGetIn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateGetOut)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PricePerDag)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Animal.PetsName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Invoice)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ScheduleID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateGetIn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateGetOut)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PricePerDag)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Animal.PetsName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Invoice.InvoiceId)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ScheduleID">Edit</a> |
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ScheduleID">Details</a> |
                        <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.ScheduleID">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
</div>
</main>