@model SOLID.Models.Animal

@{
    ViewData["Title"] = "Edit";
}
<main>
    <div class="container">
        <div class="hero-image"><img class="hero img-fluid" src=" /img/Vet_hero.jpg"></div>
        <h1>Edit</h1>

        <h4>Animal</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="PetsId" />
                    
                    <div class="form-group">
                        <label asp-for="User " class="control-label"></label>
                        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PetsName" class="control-label"></label>
                        <input asp-for="PetsName" class="form-control" />
                        <span asp-validation-for="PetsName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TypeOfAnimal" class="control-label"></label>
                        <input asp-for="TypeOfAnimal" class="form-control" />
                        <span asp-validation-for="TypeOfAnimal" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
</div>
    </main>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
