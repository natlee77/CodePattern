@model SOLID.Models.Animal

@{
    ViewData["Title"] = "Delete";
}
<main>
    <div class="container">
        <div class="hero-image"><img class="hero img-fluid" src=" /img/Vet_hero.jpg"></div>
        <h1>Delete</h1>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Animal</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PetsName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PetsName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TypeOfAnimal)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TypeOfAnimal)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User)
                </dt>
