@model IEnumerable<SOLID.Models.Invoice>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Invoice </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                #ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item)
            </th>
            <th>
                Item Price
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PricePerItem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.DisplayName)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.Total)
                </th>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.InvoiceId">Edit</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.InvoiceId">Details</a> |
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.InvoiceId">Delete</a>
                    <a class="btn btn-primary" asp-action="Send" asp-route-id="@item.InvoiceId">Send</a>
                </td>
            </tr>
        }
    </tbody>
</table>
