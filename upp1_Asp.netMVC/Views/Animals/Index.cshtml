@model IEnumerable<SOLID.Models.Animal>

@{
    ViewData["Title"] = "Index";
}
<main>
    <div class="container">
        <div class="hero-image"><img class="hero img-fluid" src=" /img/Vet_hero.jpg"></div>
        <h2>Here you can create ,edit delete animal</h2>

        <p>
            <a  class="btn btn-primary" asp-action="Create">Create New Animal</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PetsName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TypeOfAnimal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.User)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PetsId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PetsName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TypeOfAnimal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.DisplayName)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.PetsId">Edit</a> |
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.PetsId">Details</a> |
                        <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.PetsId">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
</div>
 </main>